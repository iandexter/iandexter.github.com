<!DOCTYPE html>
<html>
  <head>
    <title>CV - %(( name %))</title>
    <meta http-equiv="Description" content="%(( summary %))">
    <meta http-equiv="Keywords" content="%(- for k in keywords -%)%(( k %)),%(- endfor -%)cv,Jinja2">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">

    <!-- Additional styles -->
    <link href="http://fonts.googleapis.com/css?family=Roboto:100,100italic,300,300italic,400,400italic,500,500italic" rel="stylesheet" type="text/css">
    <link href="css/style.css" rel="stylesheet" type="text/css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="../../assets/js/html5shiv.js"></script>
      <script src="../../assets/js/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <div id="title">
      <h1>%(( name %))</h1>
      <h2>%(( title %))</h2>
    </div>
    <div id="summary">
      <p class="lead">%(( summary %)) <small>Last update: %(( last_update %))</small></p>
    </div>
    <ul class="nav nav-pills">
      <li class="active"><a href="#overview" data-toggle="tab">Overview</a></li>
      <li><a href="#experience" data-toggle="tab">Experience</a></li>
      <li><a href="#other" data-toggle="tab">Other information</a></li>
      <li><a href="#contact" data-toggle="tab">Contact info</a></li>
      <li><a href="#downloads" data-toggle="tab">Download</a></li>
    </ul>
    <div class="tab-content">
      <div id="overview" class="tab-pane active">
        <h3>Qualifications</h3>
        <ul>
          %(- for e in credentials.education -%)<li><strong>%(( e.degree %))</strong> major in %(( e.major %)), %(( e.year %))<br />%(( e.school %))</li>%(- endfor -%)
          %(- for c in credentials.certification -%)<li><strong>%( if c.verify.link %)<a href="%(( c.verify.link %))" title="%(( c.verify.title %))">%(( c.title %))</a>%( else %)%(( c.title %))%( endif %)</strong>, %(( c.date %))</li>
          %(- endfor -%)
        </ul>
        <h3>Skill areas</h3>
        <ul>
          %(- for s in overview.skills -%)<li>%(( s.area %)) (%(( s.years %)) %( if s.years > 1 %)years%( else %)year%( endif %) / %(( s.proficiency %)))</li>
          %(- endfor -%)
        </ul>
      </div>
      <div id="experience" class="tab-pane">
        %(- for e in experience -%)
        <div id="%(( e.title|replace(' ', '')|replace(',', '')|replace('/', '')|lower %))">
          <h3>%(( e.title %)) &mdash; %(( e.start %)) to %(( e.end %))</h3>
          <h4><em>%( if e.organization.link %)<a href="%(( e.organization.link%))">%(( e.organization.name %))</a>%( else %)%(( e.organization.name %))%( endif %)</em>%( if e.organization.under %) (under %(( e.organization.under %)))%( endif %), %(( e.organization.location %))</h4>
          <p>%(( e.summary %)) %(( e.organization.description %)) <a data-toggle="collapse" href="#%(( e.title|replace(' ', '')|replace(',', '')|replace('/', '')|lower %))_tasks">More</a></p>
          <ul id="%(( e.title|replace(' ', '')|replace(',', '')|replace('/', '')|lower %))_tasks" class="collapse">
            %(- for t in e.tasks -%)<li>%(( t %))</li>
            %(- endfor -%)
          </ul>
        </div>
        %(- endfor -%)
      </div>
      <div id="other" class="tab-pane">
        <p><strong>Interests</strong>: %( for i in overview.interests -%)%(( i %))%( if not loop.last %), %(endif %)%(- endfor -%)</p>
        <h3>Languages</h3>
          <ul>
            %(- for l in overview.languages -%)<li>%(( l.language %)) (%(( l.years %)) %( if l.years > 1 %)years%( else %)year%( endif %) / %(( l.proficiency %)))</li>
            %(- endfor -%)
          </ul>
        <h3>Platforms</h3>
        <ul>
          %(- for p in overview.platforms -%)<li>%(( p.platform %)) (%(( p.years %)) %( if p.years > 1 %)years%( else %)year%( endif %) / %(( p.proficiency %)))</li>
          %(- endfor -%)
        </ul>
        <h3>Tools</h3>
        <ul>
          %(- for t in overview.tools -%)<li>%(( t.name %)): %( for n in t.tools %)%(( n.tool %))%( if not loop.last %), %( endif %)%( endfor %)</li>
          %(- endfor -%)
        </ul>
      </div>
      <div id="contact" class="tab-pane">
        <ul>
          %(- for p in contact.phone -%)<li>%(( p %))</li>%(- endfor -%)
          %(- for e in contact.email -%)<li><a href="mailto:%(( e %))">%(( e|safe %))</a></li>%(- endfor -%)
          %(- for w in contact.web -%)<li><a href="%(( w.link %))" title="%(( w.title %))">%(( w.link|safe %))</a></li>%(- endfor -%)
        </ul>
      </div>
      <div id="downloads" class="tab-pane">
        <ul>
          %(- for d in downloads -%)<li>%(( d.name %)) (%(- for l in d.links -%)<a href="%(( l.url|safe %))">%(( l.type %))</a>%( if not loop.last %) | %( endif %)%(- endfor -%))</li>
          %(- endfor -%)
        </ul>
      </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="http://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>
